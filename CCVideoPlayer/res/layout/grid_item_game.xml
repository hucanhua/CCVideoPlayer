<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="220.0dp"
            android:layout_height="160.0dp"
    android:orientation="vertical" 
    android:gravity="center"
    >
  <FrameLayout
      android:id="@+id/item_lay"
        android:layout_width="220.0dp"
        android:layout_height="160.0dp"
        >
<LinearLayout 
      android:layout_width="220.0dp"
        android:layout_height="160.0dp"
        android:background="@drawable/grid_game_item_selector"
        android:descendantFocusability="blocksDescendants" 
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
    >
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="220.0dp"
            android:layout_height="110.0dp"
            android:scaleType="fitXY"
            android:src="@drawable/grid_item_default"
             />
           <TextView
            android:id="@+id/item_name"
            android:layout_width="220dp"
            android:layout_height="25.0dp"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:background="@drawable/grid_item_name_bg"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="14dp"
            android:textSize="18sp" />
           </LinearLayout>
    </FrameLayout>
</LinearLayout>